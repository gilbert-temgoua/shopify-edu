<div class="faq-section" id="{{ section.id }}">
  <div class="faq-container">
    {% if section.settings.heading != blank %}
      <h1 class="faq-heading">{{ section.settings.heading }}</h1>
    {% endif %}
    
    <div class="faq-items">
      {% for block in section.blocks %}
        <div class="faq-item" {{ block.shopify_attributes }}>
          <button class="faq-question" aria-expanded="false" aria-controls="faq-answer-{{ block.id }}">
            <span class="faq-question-text">
              <strong>{{ block.settings.question }}</strong>
            </span>
            <span class="faq-arrow">
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </span>
          </button>
          <div class="faq-answer" id="faq-answer-{{ block.id }}" role="region">
            <div class="faq-answer-content">
              {{ block.settings.answer }}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const faqSection = document.getElementById('{{ section.id }}');
  
  if (faqSection) {
    const faqItems = faqSection.querySelectorAll('.faq-item');
    const faqQuestions = faqSection.querySelectorAll('.faq-question');
    
    faqQuestions.forEach(question => {
      question.addEventListener('click', function() {
        const currentItem = this.parentElement;
        const isCurrentlyActive = currentItem.classList.contains('active');
        
        faqItems.forEach(item => {
          item.classList.remove('active');
          const questionBtn = item.querySelector('.faq-question');
          questionBtn.setAttribute('aria-expanded', 'false');
        });

        if (!isCurrentlyActive) {
          currentItem.classList.add('active');
          this.setAttribute('aria-expanded', 'true');
        }
      });
    });
  }
});
</script>

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently asked questions"
    }
  ],
  "blocks": [
    {
      "type": "question",
      "name": "Question Block",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Frequently asked question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>Use this text to answer questions in as much detail as possible for your customers.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.faq-section {
  padding: 60px 20px;
  max-width: 800px;
  margin: 0 auto;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.faq-container {
  width: 100%;
}

.faq-heading {
  font-size: 2rem;
  margin-bottom: 2rem;
  color: #000;
  font-weight: 600;
  text-align: left;
}

.faq-items {
  border: none;
  border-radius: 0;
}

.faq-item {
  border-bottom: 1px solid #e1e1e1;
  background: #fff;
  transition: all 0.3s ease;
}

.faq-item:last-child {
  border-bottom: 1px solid #e1e1e1;
}

.faq-question {
  width: 100%;
  padding: 20px 0;
  text-align: left;
  background: none;
  border: none;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
  font-size: 1rem;
  color: #000;
}

.faq-question:hover {
  background: none;
}

.faq-question-text {
  flex: 1;
  margin-right: 20px;
  text-align: left;
}

.faq-question-text strong {
  font-weight: 600;
}

.faq-arrow {
  width: 16px;
  height: 16px;
  flex-shrink: 0;
  transition: transform 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.faq-arrow svg {
  color: #000;
}

.faq-answer {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
  background: #fff;
}

.faq-answer-content {
  padding: 0;
}

.faq-answer-content p {
  margin: 0;
  padding: 0 0 20px 0;
  line-height: 1.6;
  color: #333;
  font-weight: 400;
}

/* Active state */
.faq-item.active {
  background: #fff;
}

.faq-item.active .faq-question {
  padding-bottom: 15px;
}

.faq-item.active .faq-arrow {
  transform: rotate(180deg);
}

.faq-item.active .faq-answer {
  max-height: 500px;
}

@media (max-width: 768px) {
  .faq-section {
    padding: 40px 16px;
  }
  
  .faq-heading {
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
  }
  
  .faq-question {
    padding: 16px 0;
    font-size: 0.95rem;
  }
  
  .faq-answer-content p {
    padding: 0 0 16px 0;
    font-size: 0.9rem;
  }
}

.faq-answer {
  transition: max-height 0.3s ease;
}
{% endstylesheet %}